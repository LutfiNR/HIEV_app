<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hiev.app">

    <uses-permission android:name="android.permission.CAMERA" />
    <!--    This helps to permit the user to access Camera-->

    <uses-feature android:glEsVersion="0x00030000" android:required="true" />
    <!--    This helps to check a specific feature in the phone's hardware, here it is OpenGl ES version 3-->

    <uses-feature android:name="android.hardware.camera.ar" android:required="true"/>
    <!--    Here it is checking for AR feature in phone camera-->

    <application
        android:allowBackup="true"
        android:icon="@drawable/logohiev"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">

        <meta-data android:name="com.google.ar.core" android:value="required" />

        <activity android:name="com.hiev.app.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hiev.app.DetailActivity" />
        <activity
            android:name="com.hiev.app.ArActivity"
            />
    </application>

</manifest>